<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/control_view_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_gallery_tint"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/webm_video_control_inner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="false"
        android:focusable="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/current_progress"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="00:00"
            android:textColor="@android:color/white" />

        <FrameLayout
            android:id="@+id/sound_switcher_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/sound_switcher"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:adjustViewBounds="false"
                android:clickable="false"
                android:focusable="false"
                app:srcCompat="@drawable/ic_volume_up_white_24dp" />
        </FrameLayout>

        <SeekBar
            android:id="@+id/video_progress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/play_pause_container"
            android:layout_toLeftOf="@+id/sound_switcher_container"
            android:layout_weight="1"
            android:max="100" />

        <FrameLayout
            android:id="@+id/play_pause_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/play_pause"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:adjustViewBounds="false"
                android:clickable="false"
                android:focusable="false"
                app:srcCompat="@drawable/ic_play_arrow_white_24dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/overall_duration"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="00:00"
            android:textColor="@android:color/white" />

    </LinearLayout>

</FrameLayout>