                            android:id="@+id/webm_imageview_3"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="2dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_play_circle_outline_makaba"/>

                    </FrameLayout>

                    <TextView
                        android:id="@+id/image_summary_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_below="@+id/image_container_3"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="summary"
                        android:textSize="10sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/image_with_summary_container_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/image_with_summary_container_3"

                    android:layout_marginLeft="@dimen/post_item_side_padding"
                    android:layout_toEndOf="@+id/image_with_summary_container_3"
                    android:layout_toRightOf="@+id/image_with_summary_container_3">

                    <FrameLayout
                        android:id="@+id/image_container_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <ImageView
                            android:id="@+id/post_image_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:adjustViewBounds="true"
                            android:maxHeight="150dp"/>

                        <ImageView
                            android:id="@+id/webm_imageview_4"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="2dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_play_circle_outline_makaba"/>

                    </FrameLayout>

                    <TextView
                        android:id="@+id/image_summary_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_below="@+id/image_container_4"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="summary"
                        android:textSize="10sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/image_with_summary_container_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="false"
                    android:layout_below="@+id/image_with_summary_container_1"
                    android:layout_marginTop="2dp">

                    <FrameLayout
                        android:id="@+id/image_container_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <ImageView
                            android:id="@+id/post_image_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:adjustViewBounds="true"
                            android:maxHeight="150dp"/>

                        <ImageView
                            android:id="@+id/webm_imageview_5"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="2dp"
