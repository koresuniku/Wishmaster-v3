                    </FrameLayout>

                    <TextView
                        android:id="@+id/image_summary_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_below="@+id/image_container_5"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="summary"
                        android:textSize="10sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/image_with_summary_container_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_below="@+id/image_with_summary_container_2"

                    android:layout_marginLeft="@dimen/post_item_side_padding"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/image_with_summary_container_5"
                    android:layout_toRightOf="@+id/image_with_summary_container_5">

                    <FrameLayout
                        android:id="@+id/image_container_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <ImageView
                            android:id="@+id/post_image_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
