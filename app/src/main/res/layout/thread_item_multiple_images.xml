                            android:maxHeight="150dp"/>

                        <ImageView
                            android:id="@+id/webm_imageview_6"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="2dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_play_circle_outline_makaba"/>

                    </FrameLayout>

                    <TextView
                        android:id="@+id/image_summary_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_below="@+id/image_container_6"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="summary"
                        android:textSize="10sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/image_with_summary_container_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_below="@+id/image_with_summary_container_2"

                    android:layout_marginLeft="@dimen/post_item_side_padding"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/image_with_summary_container_6"
                    android:layout_toRightOf="@+id/image_with_summary_container_6">

                    <FrameLayout
                        android:id="@+id/image_container_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <ImageView
                            android:id="@+id/post_image_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:adjustViewBounds="true"
                            android:maxHeight="150dp"/>

                        <ImageView
                            android:id="@+id/webm_imageview_7"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="2dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_play_circle_outline_makaba"/>

                    </FrameLayout>

                    <TextView
                        android:id="@+id/image_summary_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_below="@+id/image_container_7"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="summary"
                        android:textSize="10sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/image_with_summary_container_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_below="@+id/image_with_summary_container_2"

                    android:layout_marginLeft="@dimen/post_item_side_padding"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/image_with_summary_container_7"
                    android:layout_toRightOf="@+id/image_with_summary_container_7">

                    <FrameLayout
                        android:id="@+id/image_container_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <ImageView
                            android:id="@+id/post_image_8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:adjustViewBounds="true"
                            android:maxHeight="150dp"/>

                        <ImageView
                            android:id="@+id/webm_imageview_8"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="2dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_play_circle_outline_makaba"/>

                    </FrameLayout>

                    <TextView
                        android:id="@+id/image_summary_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_below="@+id/image_container_8"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="summary"
                        android:textSize="10sp"/>
                </RelativeLayout>


            </RelativeLayout>

            <com.koresuniku.wishmaster.ui.widget.NoScrollTextView
                android:id="@+id/post_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentStart="false"
                android:layout_below="@+id/imagies_and_summaries_container"
                android:maxLines="6"
                android:text="comment"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:layout_below="@+id/post_content"
            android:text="posts and files info"
            android:textSize="12sp"/>


    </RelativeLayout>


</android.support.v7.widget.CardView>
