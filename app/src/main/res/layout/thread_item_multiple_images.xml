<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/thread_item_container_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/thread_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/post_item_ripple_makaba"
        android:orientation="vertical"
        android:paddingBottom="@dimen/post_item_up_under_padding"
        android:paddingLeft="@dimen/post_item_side_padding"
        android:paddingRight="@dimen/post_item_side_padding"
        android:paddingTop="@dimen/post_item_side_padding">

        <RelativeLayout
            android:id="@+id/post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/post_number_and_time_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/post_subject"
                android:text="number and time"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/post_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"

                android:text="subject"
                android:textColor="@color/colorSubject"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:id="@+id/imagies_and_summaries_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/post_number_and_time_info">

                <RelativeLayout
                    android:id="@+id/image_with_summary_container_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <FrameLayout
                        android:id="@+id/image_container_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <ImageView
                            android:id="@+id/post_image_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:adjustViewBounds="true"
                            android:maxHeight="150dp"/>

                        <ImageView
                            android:id="@+id/webm_imageview_1"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="2dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_play_circle_outline_makaba"/>

                    </FrameLayout>

                    <TextView
                        android:id="@+id/image_summary_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_below="@+id/image_container_1"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="summary"
                        android:textSize="10sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/image_with_summary_container_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:layout_marginLeft="@dimen/post_item_side_padding"
                    android:layout_toEndOf="@+id/image_with_summary_container_1"
                    android:layout_toRightOf="@+id/image_with_summary_container_1">

                    <FrameLayout
                        android:id="@+id/image_container_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <ImageView
                            android:id="@+id/post_image_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:adjustViewBounds="true"
                            android:maxHeight="150dp"/>

                        <ImageView
                            android:id="@+id/webm_imageview_2"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="2dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_play_circle_outline_makaba"/>

                    </FrameLayout>

                    <TextView
                        android:id="@+id/image_summary_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_below="@+id/image_container_2"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="summary"
                        android:textSize="10sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/image_with_summary_container_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/post_item_side_padding"
                    android:layout_toEndOf="@+id/image_with_summary_container_2"
                    android:layout_toRightOf="@+id/image_with_summary_container_2">

                    <FrameLayout
                        android:id="@+id/image_container_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <ImageView
                            android:id="@+id/post_image_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
