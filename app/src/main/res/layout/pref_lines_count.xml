<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lines_count_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/lines_count_seekbar"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="0" />

    <TextView
        android:id="@+id/lines_count_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lines_count_seekbar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/pref_lines_count_max" />

    <TextView
        android:id="@+id/lines_count_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lines_count_current"
        android:layout_alignStart="@+id/lines_count_current"
        android:layout_below="@+id/lines_count_seekbar"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/pref_lines_count_hint" />

    <SeekBar
        android:id="@+id/lines_count_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/lines_count_current"
        android:layout_toLeftOf="@+id/lines_count_max"
        android:layout_toRightOf="@+id/lines_count_current"
        android:layout_toStartOf="@+id/lines_count_max" />

</RelativeLayout>